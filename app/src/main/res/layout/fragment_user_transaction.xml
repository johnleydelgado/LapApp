<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_layout_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.User.View.Fragment.user_transaction_fragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/login_background_color"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:textColor="@color/color_font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Patient Name"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                />
            <EditText
                android:id="@+id/patient_name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/color_line_gray"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light"
                android:hint="name"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/color_font_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView2"
                android:textColor="@color/color_font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Patient Name"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                />
            <EditText
                android:id="@+id/patient_name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/color_line_gray"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light"
                android:hint="name"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/color_font_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView3"
                android:textColor="@color/color_font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Patient Name"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                />
            <EditText
                android:id="@+id/patient_name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/color_line_gray"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light"
                android:hint="name"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/color_font_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView4"
                android:textColor="@color/color_font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Patient Name"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                />
            <EditText
                android:id="@+id/patient_name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/color_line_gray"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light"
                android:hint="name"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/color_font_gray"
                android:textSize="14sp"/>


            />
            <TextView
                android:id="@+id/textView5"
                android:textColor="@color/color_font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Bar Code"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp">

                <EditText
                    android:id="@+id/barcode_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/color_line_gray"
                    android:ems="10"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="barcode"
                    android:inputType="textPersonName"
                    android:text=""
                    android:focusable="false"
                    android:textColor="@color/color_font_gray"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/qr_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/user_info_camera_btn"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/textView6"
                android:textColor="@color/color_font_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Signature"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/signature_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:ems="10"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="barcode"
                    android:inputType="textPersonName"
                    android:text=""
                    android:focusable="false"
                    android:textColor="@color/color_font_gray"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/signature_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/user_toolbar_icon_information"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"/>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/register_btn"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_btn"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Submit"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>